<Window x:Class="FTPClient.NewName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewName" Height="154" Width="300">
    <Grid>
        <Label x:Name="lbEnterName" Content="Enter new name of the directory or file" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNewName" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="tbNewName_TextChanged" TabIndex="0" MaxLength="255" IsUndoEnabled="False" />
        <Button x:Name="btnNewNameOK" Content="OK" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="btnNewNameOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="90,87,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
